<%= form_with model: @user, url: profile_path, local: true do |f| %>
  <div class="field">
    <%= f.label :ユーザー名 %>
    <%= f.text_field :username, class: 'form-control mb-3' %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :profile, class: 'form-control mb-3' %>
  </div  
  <div class="field">
    <%= f.label :アバターアイコン %>
    <%= f.file_field :avatar,class: 'form-control mb-3' %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <%= link_to "戻る", :back %>
  <%= f.submit "更新", class: "btn btn-primary"%>
<%end%>
 